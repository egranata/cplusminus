ref type pair {
    x: int64,
    y: int64
}

impl pair {
    func foo() ret int64 {
        self.x = self.x + 1;
        return self.y;
    }
}

func main() ret int64 {
    let p = alloc pair;
    p.x = 12;
    p->foo();
    return p.x;
}

