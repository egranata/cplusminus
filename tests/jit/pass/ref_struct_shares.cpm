ref type number {
    x: int64,
}

impl number {
    func add(x: int64) {
        self.x = self.x + x;
    }

    func increase() {
        self->add(1);
    }
}

func main() ret int32 {
    let num = alloc number{x:12};
    let nnum = num;
    assert num.x == 12;
    assert nnum.x == 12;
    num->increase();
    assert num.x == 13;
    assert nnum.x == 13;
    num->increase();
    nnum->increase();
    assert num.x == 15;
    assert nnum.x == 15;
    num->increase();
    assert num.x == 16;
    assert nnum.x == 16;
    return 0;
}

