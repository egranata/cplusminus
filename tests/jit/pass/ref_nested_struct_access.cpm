type counter {
    n: int64
}

type counters {
    c1: counter,
    c2: counter
}

impl counters {
    func init() ret int64 {
        self.c1 = alloc counter;
        self.c2 = alloc counter;
        return 0;
    }
}

func main() ret int64 {
    let cc = alloc counters;
    cc->init();
    cc.c1.n = 12;
    cc.c2.n = 13;
    return cc.c1.n + cc.c2.n;
}

