ref type pair {
    x: int64,
    y: int64
}

impl pair {
    func add(n: int64, m: int64) ret pair {
        var ret = alloc pair;
        ret.x = self.x + n;
        ret.y = self.y + m;
        return ret;
    }
}

func main() ret int64 {
    var p = alloc pair;
    p.x = 12;
    p.y = 13;
    p = p->add(5, 7);
    return p.y - p.x;
}

